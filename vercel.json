{
  "version": 2,
  "buildCommand": "pnpm run build",
  "outputDirectory": "packages/server/dist",
  "installCommand": "pnpm install",
  "framework": null,
  "builds": [
    { "src": "packages/server/dist/index.js", "use": "@vercel/node" },
    { "src": "packages/ui/dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "packages/server/dist/index.js" },
    { "src": "/(.*)", "dest": "packages/ui/dist/$1" }
  ]
}
